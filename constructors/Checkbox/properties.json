{
  "comp": {
    "required": {
      "color": "red"
    },
    "_type": "var",
    "_settingClone": true
  },
  "#input": {},
  "#body": {
    "_settingClone": true
  },
  "#item": {
    "#icon": {
      "_settingClone": true
    },
    "_settingClone": true
  },
  "#loading": {},
  "#info": {
    "#label": {
      "_settingClone": true
    },
    "_settingClone": true
  },
  "focus": {
    "_type": "none"
  },
  "checked": {
    "_type": "none"
  },
  "disabled": {
    "_type": "none"
  },
  "~required": {},
  "~right": {},
  "&__input:focus ~ *": {
    "link:focus": "{??focus}"
  },
  "&__input:checked ~ *": {
    "link:checked": "{??checked}"
  },
  "&__input:disabled ~ *": {
    "link:disabled": "{??disabled}"
  }
