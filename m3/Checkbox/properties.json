{
  "main": "{d.checkbox}",
  "item": {
    "color": {
      "_rename": "palette-color"
    },
    "background-color": {
      "_rename": "palette-background"
    },
    "before": {
      "border-color": {
        "_rename": "palette-border"
      }
    },
    "#icon": {
      "background-color": {
        "_rename": "palette-background"
      },
      "border-color": {
        "_rename": "palette-border"
      }
    }
  },
  "loading": {
    "padding": "{??comp.padding} + {?ref.spacing.px} * 3",
    "color": "{??comp.icon.color}"
  },
  "checked": {
    "comp": {
      "_type": "var"
    },
    "#item": {
      "#icon": {}
    },
    "_type": "none"
  },
  "&__input:checked ~ *": {
    "linkChecked": "{??checked}"
  },
  "disabled": {
    "comp": {
      "_type": "var"
    },
    "_type": "none"
  },
  "&__input:disabled ~ *": {
    "linkDisabled": "{??disabled}"
  }
}
